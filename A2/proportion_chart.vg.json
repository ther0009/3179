{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Proportion of bulk-billed services provided for age groups",
  "width": 350,
  "height": 320,

  "data": {
    "url": "https://raw.githubusercontent.com/ther0009/3179/refs/heads/main/A2/stacked_bar_chart.csv",
    "format": {"type": "csv"}
  },

  "transform": [
    { "fold": ["2020","2021","2022","2023","2024","2025"], "as": ["Year","CountRaw"] },

 
    { "calculate": "toNumber(replace(datum.CountRaw, /[^0-9.]/g, ''))", "as": "Count" },

   
    { "joinaggregate": [{"op":"sum","field":"Count","as":"YearTotal"}], "groupby": ["Year"] },
    { "calculate": "datum.Count / datum.YearTotal", "as": "Share" }
  ],

  "mark": {"type":"bar"},

  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "sort": ["2020","2021","2022","2023","2024","2025"]
    },
    "y": {
      "aggregate": "sum",
      "field": "Count",
      "type": "quantitative",
      "title": "Proportion",
      "stack": "normalize",
      "axis": {"format": ".0%"}
    },
    "color": {
      "field": "Demography value",
      "type": "nominal",
      "title": "Age group",
      "scale": { "domain": ["0-15","16-64","65+"],
                 "range": ["#8ecae6","#219ebc","#023047"] },
      "legend": {"orient":"bottom"}
    },
    "order": {
      "field": "Demography value",
      "type": "nominal",
      "sort": ["0-15","16-64","65+"]
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal"},
      {"field": "Demography value", "type": "nominal", "title": "Age group"},
      {"field": "Share", "type": "quantitative", "format": ".1%", "title": "Share"}
    ]
  },

  "config": {
    "axis": {"grid": true},
    "legend": {"columns": 3}
  }
}
